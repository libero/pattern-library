{%- set attributes = {class: 'item-tags'}|merge_recursive(attributes|default({})) -%}

<div {%- include('atoms-attributes') -%}>

  {%- block body -%}

    {%- for group in groups -%}

      {%- with group only -%}
        {%- block group -%}

          {%- include('molecules-tag-list') -%}

        {%- endblock group -%}
      {%- endwith -%}

    {%- endfor -%}

  {%- endblock body -%}

</div>
