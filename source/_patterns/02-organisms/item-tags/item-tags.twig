{%- from 'atoms-attributes' import attributes -%}

{%- set attributes = attributes|default({})|merge({class: attributes.class|default([])|merge(['item-tags']) }) -%}

<div {{- attributes(attributes|default({})) }}>

  {%- block body -%}

    {%- for group in groups -%}

      {%- with group only -%}
        {%- block group -%}

          {%- include('molecules-tag-list') -%}

        {%- endblock group -%}
      {%- endwith -%}

    {%- endfor -%}

  {%- endblock body -%}

</div>
