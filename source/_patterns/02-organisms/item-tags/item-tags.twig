{%- import 'atoms-html' as html -%}

{%- set attributes = {class: 'item-tags'}|merge_recursive(attributes|default({})) -%}

<div {{- html.attributes(attributes) }}>

  {%- block body -%}

    {%- for group in groups -%}

      {%- with group only -%}
        {%- block group -%}

          {%- include('molecules-tag-list') -%}

        {%- endblock group -%}
      {%- endwith -%}

    {%- endfor -%}

  {%- endblock body -%}

</div>
