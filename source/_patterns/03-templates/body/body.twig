{%- set attributes = attributes|default({})|merge({class: attributes.class|default([]) }) -%}

<body {%- include('atoms-attributes') -%}>

    {# site header goes here#}

    {%- if contentHeader is defined -%}

        {% block contentHeader %}

            {% with contentHeader only %}

                {% include 'organisms-content-header' %}

            {% endwith %}

        {% endblock %}

    {%- endif -%}


    {%- if pageTemplate.name is defined -%}

        {%- block template -%}

            {%- if pageTemplate.name is defined -%}
                {%- include node.template with node.arguments only -%}
            {%- endif -%}

        {%- endblock template -%}

    {%- endif -%}

</body>
