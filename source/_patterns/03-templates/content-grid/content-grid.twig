{%- set attributes = attributes|default({})|merge({class: attributes.class|default([])|merge(['content-grid']) }) -%}

{%- if secondaryContent|default([])|length -%}
  {%- set attributes = attributes|merge({class: attributes.class|merge(['content-grid--has-secondary']) }) -%}
{%- endif -%}

<div {%- include 'atoms-attributes' %}>

  {%- with {content: tertiaryContent|default([])} only -%}
    {%- block tertiaryContent -%}

      {%- if content|length -%}

        {%- set attributes = attributes|default({})|merge({class: attributes.class|default([])|merge(['content-grid__tertiary']) }) -%}

        <div {%- include 'atoms-attributes' %}>
          {%- include 'atoms-text' with {nodes: content} -%}
        </div>

      {%- endif -%}

    {%- endblock tertiaryContent -%}
  {%- endwith -%}

  {%- with {content: primaryContent} only -%}
    {%- block primaryContent -%}

      {%- set attributes = attributes|default({})|merge({class: attributes.class|default([])|merge(['content-grid__primary']) }) -%}

      <div {%- include 'atoms-attributes' %}>
        {%- include 'atoms-text' with {nodes: content} -%}
      </div>

    {%- endblock primaryContent -%}
  {%- endwith -%}

  {%- with {content: secondaryContent|default([])} only -%}
    {%- block secondaryContent -%}

      {%- if content|length -%}

        {%- set attributes = attributes|default({})|merge({class: attributes.class|default([])|merge(['content-grid__secondary']) }) -%}

        <div {%- include 'atoms-attributes' %}>
          {%- include 'atoms-text' with {nodes: content} -%}
        </div>

      {%- endif -%}

    {%- endblock secondaryContent -%}
  {%- endwith -%}

</div>
