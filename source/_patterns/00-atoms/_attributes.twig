{% if attributes is defined %}

  {%- for name, value in attributes -%}

    {%- if value is same as(true) -%}
      {{- ' ' ~ name }}
    {%- elseif value is same as(false) -%}
      {# Do nothing #}
    {%- elseif value is iterable -%}
      {{- ' ' ~ name }}="{% for item in value %}{% if not loop.first %} {% endif %}{{ item }}{% endfor %}"
    {%- else -%}
      {{- ' ' ~ name }}="{{ value }}"
    {%- endif -%}

  {%- endfor -%}

{% endif %}
