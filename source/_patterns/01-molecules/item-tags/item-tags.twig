{%- set attributes = attributes|default({})|merge({class: attributes.class|default([])|merge(['item-tags']) }) -%}

<div {%- include('atoms-attributes') -%}>

  {%- for group in groups -%}

    {%- with group only -%}

      <section class="item-tags__group">

        {%- with title only -%}

          {%- set attributes = attributes|default({})|merge({class: attributes.class|default([])|merge(['item-tags__group_title']) }) -%}
          {%- include 'atoms-heading' with {level: 4} -%}

        {%- endwith -%}

        <ul class="item-tags__list">

          {%- for item in items -%}

            <li class="item-tags__list_item">

              {%- with item only -%}

                {%- if attributes.href is defined -%}
                  {%- set attributes = attributes|default({})|merge({class: attributes.class|default([])|merge(['item-tags__link']) }) -%}
                {%- endif -%}

                {%- include 'atoms-link' -%}

              {%- endwith -%}

            </li>

          {%- endfor -%}

        </ul>

      </section>

    {%- endwith -%}

  {%- endfor -%}

</div>
