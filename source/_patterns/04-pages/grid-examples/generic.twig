{% set attributes = attributes|default({})|merge({class: attributes.class|default([])|merge(['page-grid']) }) -%}

<div {%- include 'atoms-attributes' %}>

    {# Suggests a page-grid-item pattern with hsasKeyline property #}
    <div class="page-grid-item page-grid-item--has-keyline">
        <div>Site header</div>
    </div>

    <div class="page-grid-item">
        <div>any beginning stuff</div></div>
    <div class="page-grid-item">
        <main class="grid-research-article" role="main">

            {% include 'organisms-content-header' with contentHeader only %}

            <div class="grid-tertiary-content">
                tertiary content (view selector)
            </div>

            <div class="grid-primary-content">
                <h2>Main content</h2>
                {%- include 'atoms-text' with {nodes: content} -%}
            </div>

            <div class="grid-secondary-content">
                <h2>Secondary content</h2>
                {%- include 'atoms-text' with {nodes: sidebar} -%}
            </div>

        </main>
    </div>

    <div class="page-grid-item">
        <div class="specific-1">first centred thing with full length keyline before and after</div>
        <div class="specific-2">second centred thing with full length keyline after</div>
    </div>

    <div class="page-grid-item">
        <div>site footer</div>
    </div>

</div>
